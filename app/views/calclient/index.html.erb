<%= button_to "Sum", call_path, params: { server: "sum", num1: 2, num2: 8 } %>
<%= button_to "Subtract", call_path, params: { server: "subtract", num1: 5, num2: 4 } %>
<%= button_to "Invalid", call_path, params: { server: "   ", num1: '1', num2: 8 } %>

<h1>Custom Parameters</h1>
<div>
  <%= form_with(url: call_path, local: true) do |f| %>

  <%= f.label :server %>
  <%= f.text_field :server %>

  <%= f.label :num1 %>
  <%= f.text_field :num1 %>

  <%= f.label :num2 %>
  <%= f.text_field :num2 %>

  <%= f.submit "Submit" %>
  <% end %>
</div>